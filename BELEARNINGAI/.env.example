# =============================================================================
# BELEARNINGAI Backend Environment Variables
# =============================================================================
# Copy this file as .env and fill in actual values
# Do NOT commit .env file to Git!

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="AI Learning Platform API"
ENVIRONMENT="development"  # development/staging/production
API_PREFIX="/api/v1"

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DATABASE="ai_learning_app"
# Example for production:
# MONGODB_URL="mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority"

# -----------------------------------------------------------------------------
# JWT Authentication Settings
# -----------------------------------------------------------------------------
SECRET_KEY="replace-this-with-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# AI Services (Google GenAI / Gemini)
# -----------------------------------------------------------------------------
GOOGLE_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-1.5-pro"

# -----------------------------------------------------------------------------
# Redis Cache (Optional)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379/0"
# Example: redis://user:password@redis-host:port/0

# -----------------------------------------------------------------------------
# CORS Settings (Frontend URLs)
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS='["http://localhost:5173", "http://127.0.0.1:5500", "http://localhost:3000"]'

# -----------------------------------------------------------------------------
# Email Service (SendGrid hoáº·c SMTP)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=""
FROM_EMAIL="noreply@ailearning.com"
# Optional SMTP config
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASSWORD=""

# -----------------------------------------------------------------------------
# File Storage (Local / Cloud)
# -----------------------------------------------------------------------------
STORAGE_TYPE="local"  # local/s3/r2
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE_MB=50

S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_BUCKET_NAME=""
S3_REGION="auto"
S3_ENDPOINT_URL=""

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=100
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL="INFO"
SENTRY_DSN=""

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_AI_CHAT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_VECTOR_SEARCH=false

# -----------------------------------------------------------------------------
# Development / Testing
# -----------------------------------------------------------------------------
DEBUG=true
TESTING=false
