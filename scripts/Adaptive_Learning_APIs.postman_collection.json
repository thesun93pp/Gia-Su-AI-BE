{
  "info": {
    "name": "Adaptive Learning APIs - Test Collection",
    "description": "Collection để test Adaptive Learning features với data mẫu sẵn",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "course_id",
      "value": "674b8e9f8a7c6d5e4f3a2b1c",
      "type": "string"
    },
    {
      "key": "enrollment_id",
      "value": "674c9f1a2b3c4d5e6f7a8b9c",
      "type": "string"
    },
    {
      "key": "assessment_session_id",
      "value": "674d1a2b3c4d5e6f7a8b9c0d",
      "type": "string"
    },
    {
      "key": "lesson_id",
      "value": "674e1a2b3c4d5e6f7a8b9c0d",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "0. Login (Get Token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.collectionVariables.set(\"access_token\", jsonData.access_token);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"swagger.test@example.com\",\n  \"password\": \"Test@12345\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        },
        "description": "Login để lấy access token. Token sẽ tự động lưu vào collection variables."
      },
      "response": []
    },
    {
      "name": "1. Apply Assessment (Auto-Skip)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"assessment_session_id\": \"{{assessment_session_id}}\",\n  \"course_id\": \"{{course_id}}\",\n  \"enrollment_id\": \"{{enrollment_id}}\",\n  \"skip_threshold\": 0.85,\n  \"time_threshold\": 0.50\n}"
        },
        "url": {
          "raw": "{{base_url}}/adaptive/apply-assessment",
          "host": ["{{base_url}}"],
          "path": ["adaptive", "apply-assessment"]
        },
        "description": "Feature 1: Tự động skip modules dựa trên kết quả assessment"
      },
      "response": []
    },
    {
      "name": "2. Create Adaptive Path",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"enrollment_id\": \"{{enrollment_id}}\",\n  \"assessment_session_id\": \"{{assessment_session_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/adaptive/path",
          "host": ["{{base_url}}"],
          "path": ["adaptive", "path"]
        },
        "description": "Feature 2: Tạo learning path tùy chỉnh (SKIP/REVIEW/START cho từng module)"
      },
      "response": []
    },
    {
      "name": "3a. Track Completion (Fast Learner)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"course_id\": \"{{course_id}}\",\n  \"lesson_id\": \"{{lesson_id}}\",\n  \"time_spent_seconds\": 600,\n  \"quiz_score\": 95.0,\n  \"attempts\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/adaptive/track-completion",
          "host": ["{{base_url}}"],
          "path": ["adaptive", "track-completion"]
        },
        "description": "Feature 3: Track completion - Scenario học nhanh, điểm cao → Hệ thống suggest tăng tốc"
      },
      "response": []
    },
    {
      "name": "3b. Track Completion (Slow Learner)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"course_id\": \"{{course_id}}\",\n  \"lesson_id\": \"{{lesson_id}}\",\n  \"time_spent_seconds\": 7200,\n  \"quiz_score\": 55.0,\n  \"attempts\": 3\n}"
        },
        "url": {
          "raw": "{{base_url}}/adaptive/track-completion",
          "host": ["{{base_url}}"],
          "path": ["adaptive", "track-completion"]
        },
        "description": "Feature 3: Track completion - Scenario học chậm, điểm thấp → Hệ thống suggest giảm tốc, thêm bài tập"
      },
      "response": []
    }
  ]
}

